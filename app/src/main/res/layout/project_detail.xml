<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:paddingBottom="@dimen/activity_vertical_margin"

              android:orientation="vertical"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:elevation="2dp">

    <LinearLayout
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvNameOfProject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name of project"
                android:textAppearance="@android:style/TextAppearance.Material.Headline"/>

            <TextView
                android:id="@+id/tvProjectNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="project number "
                android:textAppearance="@android:style/TextAppearance.Material.Medium"/>

            <TextView
                android:id="@+id/tvCostumer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="costumer name "
                android:textAppearance="@android:style/TextAppearance.Material.Small"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.75"
            android:animateLayoutChanges="false"
            android:orientation="vertical"
            android:weightSum="1">

            <LinearLayout
                android:id="@+id/llMessages"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvNumberOfMessages"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="25"/>

                <ImageView
                    android:id="@+id/ivMessages"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:transitionName="grLogo"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/ic_message_black_24dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:orientation="horizontal">
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
